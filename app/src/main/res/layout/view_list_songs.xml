<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    card_view:cardElevation="1dp"
    card_view:cardCornerRadius="6dp"
    android:background="#8c000000"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="140dp">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/ListFrag_ImageViewAlbum"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/icono_disco"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/ListFrag_TV_BandName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="@string/band_name"/>

            <TextView
                android:id="@+id/ListFrag_TV_SongName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:text="@string/song_name"/>

            <TextView
                android:id="@+id/ListFrag_TV_AlbumName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:text="@string/album_name"/>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>